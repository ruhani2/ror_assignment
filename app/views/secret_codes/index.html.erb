<div class="container-fluid">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <div style="text-align:center;padding:10px" class="col-md-12">
      <h1>Secret Codes</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="col-md-3">
        <%= form_with(model: @secret_code, local: true) do |form| %>
          <div class="input-group">
            <%= form.select("number", [1, 10, 20, 50, 100].collect{|x| [x, x]}, {}, { :class => "form-control"}) %>
            <span class="input-group-btn">
              <%= form.submit "Create secret codes", :class=>"form-control btn btn-primary" %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="col-md-4"></div>
      <div style="margin-top: 50px">
        <table class="table" style="text-align: center;">
          <thead class="thead-light">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Code</th>
              <th scope="col">User Email</th>
              <th scope="col">Created At</th>
              <th scope="col">Updated At</th>
            </tr>
          </thead>
          <tbody>
            <% @secret_codes.each_with_index do |secret_code, index| %>
              <tr>
                <th scope="row"><%= index + 1%></th>
                <td><%= secret_code.code %></td>
                <% if secret_code.user %>
                  <td style="color: #28a745;"><%= secret_code.user.email %></td>
                <% else %>
                  <td><%= link_to "User Registeration", new_user_registration_path(secret_code: secret_code.code), class: "btn btn-outline-success my-2 my-sm-0" %></td>
                <% end %>
                <td><%= secret_code.created_at.strftime("%m/%d/%Y") %></td>
                <td><%= secret_code.updated_at.strftime("%m/%d/%Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br>
  </div>
</div>
